<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="deviget" translate="label" sortOrder="99">
            <label>Deviget</label>
        </tab>
        <section id="product_to_cart" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <label>Product to cart</label>
            <tab>deviget</tab>
            <resource>Deviget_AddProductForUrl::config_deviget_addproductforurl</resource>
            <group id="general" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                <label>Settings</label>
                <field id="enabled" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>Enabled</label>
                    <comment>Enabled or disabled controller</comment>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="only_window" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>Enabled only window time</label>
                    <comment>Enabled or disabled check window time</comment>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                    <depends>
                        <field id="product_to_cart/general/enabled">1</field>
                    </depends>
                </field>
                <field id="start" translate="label" sortOrder="30" type="date" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Start window time</label>
                    <frontend_model>Deviget\AddProductForUrl\Block\Adminhtml\System\Config\DateTime</frontend_model>
                    <depends>
                        <field id="product_to_cart/general/enabled">1</field>
                        <field id="product_to_cart/general/only_window">1</field>
                    </depends>
                </field>
                <field id="finish" translate="label" sortOrder="40" type="date" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Finish window time</label>
                    <frontend_model>Deviget\AddProductForUrl\Block\Adminhtml\System\Config\DateTime</frontend_model>
                    <depends>
                        <field id="product_to_cart/general/enabled">1</field>
                        <field id="product_to_cart/general/only_window">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
